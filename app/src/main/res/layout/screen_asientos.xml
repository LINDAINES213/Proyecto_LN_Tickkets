<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScreenDatosCompra">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="658dp"
            android:layout_height="1096dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.635"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.778"
            app:srcCompat="@drawable/fondo_abstracto_degradado_verde_gradacion_de_color_verde_2c25jbw" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="76dp"
            android:layout_height="73dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/liga_nacional" />

        <Button
            android:id="@+id/inicio"
            android:layout_width="127dp"
            android:layout_height="48dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/actor"
            android:text="Inicio"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.109"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/noticias"
            android:layout_width="127dp"
            android:layout_height="48dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/actor"
            android:text="Noticias"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.887"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/boletos"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/actor"
            android:text="Boletos"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/general"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/actor"
            android:text="General"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/preferencia"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/preferencia"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/actor"
            android:text="Preferencia"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tribuna"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/tribuna"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="180dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/actor"
            android:text="Tribuna"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/actor"
            android:text="Volver"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/general"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>